/* pages/user/company-info.wxss */
.list_box{
	background: #fff;
}

.list{
	padding-top: 26rpx;
	padding-bottom: 26rpx;
	line-height: 48rpx;
	border-bottom: 1rpx solid #F3F5F7;
}

.list .title{
	color: #999999;
	font-size: 24rpx;
	font-weight: 400;
}

.list .info{
	color: #363636;
	font-size: 32rpx;
	font-weight: 500;
}

.confirm button{
	width: 100%;
	height: 96rpx;
	color: #fff;
	border-radius: 0;
	margin-top: 24rpx;
}

.confirm button::after{
  border: none;
}


.remind{
 	color: #EA4335;
	font-size: 28rpx;
	margin-top: 24rpx;
	margin-bottom:24rpx ;
}
