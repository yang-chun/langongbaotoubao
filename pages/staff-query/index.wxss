}



.top_box{
  width: 750rpx;
  height: 468rpx;
  background-repeat: no-repeat;
  background-size: cover;
  -webkit-background-size: cover;
  -o-background-size: cover;
  background-position: center 0;
  background-image: url('http://lgb.laowuquan.cc/assets/api/customer-bg.png');
}

.top_box .title{
	color: #FFF;
	font-size: 54rpx;
	font-weight:500;
	margin-left: 88rpx;
	padding-top: 64rpx;

}

.top_box .Introduction{
	width: 486rpx;
	line-height: 42rpx;
	font-size: 30rpx;
	margin-left: 88rpx;
	margin-top: 34rpx;
	color: #ABBDCD;
}

