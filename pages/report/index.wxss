/* pages/report/index.wxss */
.top_box{
    height:202rpx;
    background-repeat: no-repeat;
    background-size: cover;
    -webkit-background-size: cover;
    -o-background-size: cover;
    background-position: center 0;
    background-image: url('https://laowuquan.oss-cn-shanghai.aliyuncs.com/yunxiaobao/customer-bg-dark.png');
    border-radius:6rpx;
    margin-top: 34rpx;
    margin-left: 34rpx;
    margin-right: 34rpx;
}

.process_box{
    position: absolute;
    right: 34rpx;
    color: #fff;
    font-size: 24rpx;
    line-height: 50rpx;
    padding-left:41rpx;
    padding-right: 20rpx;
    background:linear-gradient(135deg,rgba(113, 187, 255, 1),rgba(67, 106, 254, 1));
    border-radius:0px 0px 0px 56px;
}

.top_box .title{
    padding-top: 44rpx;
    color: #fff;
    font-size: 24rpx;
}

.top_box .money{
    font-size: 54rpx;
    color: #fff;
    margin-top: 6rpx;
    margin-left: 24rpx;
    font-weight:bold;
}

.dispose_type_box{
    display: flex;
    color: #fff;
    font-size: 26rpx;
    margin-top: 28rpx;
}

.dispose_type{
    width: 25%;
    border-right: 1rpx solid rgba(255,255,255,.4)
}

.dispose_type:nth-child(4){
    border-right: 0rpx;
}

.dispose_type view{
    margin-top: 10rpx;
    text-align: center;
}

.add_box{
    background:#fff;
    line-height: 96rpx;
    text-align: center;
    margin:24rpx 34rpx;
    border-radius: 48rpx;
    color: #38358F;
}

.icon-jia{
    font-size: 32rpx;
}

.list{
    margin-bottom: 24rpx;
    border-radius:4rpx;
    background:#fff;
    padding: 34rpx;
    display: flex;
    flex-wrap: wrap;
}

.type_icon{
    width: 88rpx;
    height: 88rpx;

}

.list_info_box{
    margin-left: 30rpx;
    font-size: 24rpx;
    color: #999999;
    width: 80%;
}

.list_info_box view{
    padding: 5rpx;
    line-height: 34rpx;
}

.list_info{
    display: flex;
    font-weight: bold;
}

.list_info .type{
    position: absolute;
    right: 68rpx;
}