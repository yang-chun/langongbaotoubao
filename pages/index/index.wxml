<view class="top_box">
  <view class="top">
    <view class="margin34" style="position: relative;">
      <view class="company">您好！{{list.company_name}}</view>
    </view>
    <view class="top_data_box">
      <view wx:if="{{list.user_id}}" class="top_data">
        <view class="data_l">
          <view>{{words.B1}}</view>
          <view class="number">{{list.active_person}}</view>
        </view>
        <view class="data_r">
          <view>{{words.B2}}</view>
          <view class="number">{{list.month_premium}}</view>
        </view>
      </view>
      <view wx:else class="top_data">
        <view class="login" bindtap="login">点击登录</view>
      </view>
    </view>
  </view>
</view>

<view wx:if="{{list.user_id}}" class="contact_box">
  <view class="contact_list" wx:for="{{list.service_man}}" wx:key="index">
    <image class="portrait" src="{{item.avatar}}"></image>
    <view class="list_info">
      <view class="name">{{item.name}}</view>
      <view class="info">{{item.describe}}</view>
    </view>
    <image bindtap="callem" data-mobile="{{item.mobile}}" class="phone" src="/images/phone.png"></image>
  </view>
</view>

<view class="cont_box {{list.user_id?'':'marginN90'}}">
  <view class="nav padding_34">
    <view class="title_box"  bindtap="nav" data-nav='1'>
      <view class="title {{nav == 1?'titlecolor':''}}">常用功能</view>
      <view class="{{nav == 1?'titleLine':''}}"></view>
    </view>
  </view>

  <!-- 保险工具 -->
  <view wx:if="{{nav == 1}}" class="tool_box padding_34">
    <view class="tool_list"  bindtap="tool" data-index="1">
      <view class="title">{{words.A1}}</view>
      <view class="instructions">{{words.A1_1}}</view>
    </view>
    <view class="tool_list"  bindtap="tool" data-index="2">
