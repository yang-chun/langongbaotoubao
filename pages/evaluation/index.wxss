/* pages/evaluation/index.wxss */
page{
	background: #fff;
}

.logo_box{
	text-align: center;
	color: #666666;
	font-size: 36rpx;
	background: #fff;
	display: flex;
	justify-content: center;
	padding-top: 40rpx;
	padding-bottom: 76rpx;
}

.logo_box image{
	width: 94rpx;
	height: 94rpx;
	margin-bottom: 38rpx;
}

.content_box{
	border-top: 16rpx solid #F6F8F8;

}

.content_box .title{
	font-size: 32rpx;
	font-weight: 500;
	color:#000;
	text-align: center;
	margin-top: 54rpx; 
}

.expression_box{
	margin-top: 19rpx;
	display: flex;
	justify-content: center;
}

.expression_box image{
	width: 86rpx;
	height: 86rpx;
	margin-left: 50rpx;
	margin-right: 50rpx;
	padding:20rpx;
}

.textarea{
	width: auto;
	height: 362rpx;
	background: #F6F8F8;
	padding:30rpx;
	margin-top:10rpx;
}

.placeholder-class{
	color: #999999;
	font-size: 28rpx;
}

.button {
	width: 100%;
	color: #fff;
	border-radius: 0;
	position: fixed;
	bottom: 0;
}


.button button{
	width: 100%;
	height: 96rpx;
	color: #fff;
	border-radius: 0;
	margin-top: 24rpx;
}
.button button::after{
  border: none;
}