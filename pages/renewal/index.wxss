/* pages/renewal/index.wxss */
page{
	background: #fff;
}

.confirm button{
	width: 100%;
	height: 96rpx;
	color: #fff;
	border-radius: 0;
	margin-top: 24rpx;
}
.confirm button::after{
  border: none;
}

.picker{
	padding-top: 39rpx;
	padding-bottom: 39rpx;
	border-bottom: 1px solid #F3F5F7;
	font-weight:500;
	display: flex;
}

.remind{
 	color: #EA4335;
	font-size: 28rpx;
	margin-top: 24rpx;
	margin-bottom:24rpx ;
}

.icon-xiajiantou{
	position: absolute;
	right: 34rpx;
}

.cycle{
	color: #999999;
	margin-top: 25rpx;
	padding-bottom: 25rpx;
	border-bottom: 1rpx solid #F3F5F7;
}

.cycle .title{
	font-size: 24rpx;
	margin-bottom: 14rpx;
}

.cycle .content{
	color: #363636;
	font-size: 32rpx;
}


.radio text{
	color: #363636;
}

.radio:nth-child(1){
	margin-right: 300rpx;
}


radio {
	transform:scale(.76);
	box-sizing: border-box;
	background: none;
}


radio .wx-radio-input.wx-radio-input-checked {
      background-color:#12C286;
      /*box-sizing: border-box;*/
}

.introduction{
	font-size: 24rpx;
	color: #12C286;
	margin-top: 26rpx;
	margin-bottom: 54rpx;
	padding-right: 34rpx;
}

